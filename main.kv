MDScreen:
    name: "main"
    bot_name : bot_name
    MDFloatLayout:
        md_bg_color: 224/255,170/255,255/255
        Image:
            source: "INTELLISENS.png"
            size_hint: .8, .5
            pos_hint: {"center_x": .5, "center_y": .8}
        MDLabel:
            font_size: "35sp"
            text: "[size=30][b]Hi There![/b]"
            markup: True
            font_name: "Poppins-Bold.ttf"
            pos_hint: {"center_x": .5, "center_y": .58}
            halign: "center"
            theme_text_color : "Custom"
            text_color: 53/255, 56/255, 60/255, 1
        MDLabel:
            text: "[font=consola]Meet IntelliSense, your trusted mental health companion. Here to listen, guide, and support you on your journey to well-being.[/font]"
            size_hint_x: .9
            markup: True
            font_name: "Poppins"
            font_size: "35sp"
            pos_hint: {"center_x": .5, "center_y": .45}
            halign: "center"
            theme_text_color : "Custom"
            text_color: 98/255, 36/255, 152/255
        Button:
            background_color:206/255,236/255,242/255,0
            text: "[size=30]Terms and conditions[/size]"
            font_name: "Poppins"
            markup: True
            font_size: "59sp"
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .33}
            halign: "center"
            underline: "True"
            theme_text_color : "Custom"
            md_bg_color: 206/255, 236/255, 242/255
            text_color: 1, 170/255, 23/255, 1
            on_release: app.open_webpage("https://www.termsfeed.com/live/a67c3f12-d032-457e-bb45-01276b41d96c")
        MDFloatLayout:
            size_hint: .85, .08
            pos_hint: {"center_x": .5, "center_y": .22}
            canvas:
                Color:
                    rgb: (238/255, 238/255, 238/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
            TextInput:
                id: bot_name
                markup: True
                hint_text: "Username..."
                size_hint: 1, 1
                pos_hint: {"center_x": .5, "center_y": .5}
                font_size: "18sp"
                height: self.minimum_height
                cursor_color: 50/255, 50/255, 50/255, 1
                cursor_width: "2sp"
                foreground_color: 50/255, 50/255, 50/255, 1
                background_color: 0,0,0,0
                padding: 15
            
        MDFloatLayout:
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            canvas:
                Color:
                    rgb: (1, 170/255, 23/255, 1)
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [22, 22, 22, 22]
        Button:
            text:""
            size_hint: .45, .08
            pos_hint: {"center_x": .5, "center_y": .1}
            background_color: 0,0,0,0
            on_release:
                app.bot_name()
        MDLabel : 
            text: "[b]LET'S CHAT[/b]"
            halign : "center"
            markup: True
            pos_hint: {"center_y": .1}
            font_name: "Poppins-SemiBold.ttf"
            font_size: "18sp"
            color: 1,1,1,1